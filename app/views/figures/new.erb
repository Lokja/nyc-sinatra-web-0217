<h2>New Figure</h2>

<form action="/figures" method="POST">

  Name:     <input type="text" name="figure[name]" id="figure_name"><br>
  Title:    <input type="text" name="title[name]" id="new_title"><br>
  Landmark: <input type="text" name="landmark[name]" id="new_landmark"><br>

  <br>Existing<br>
  Title:    <% Title.all.each do |title| %>
              <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input><br>
            <% end %><br>

  Landmark: <% Landmark.all.each do |landmark| %>
              <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input><br>
            <% end %><br>

  <input type="submit" value="Create New Figure">
</form>
